<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //Tema para o chip

    <style name="ChipTextAppearence" parent="Theme.MaterialComponents.Light">
        <item name="theme">@style/Theme.MaterialComponents.Light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="consoleTitleAppearence" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="theme">@style/Theme.MaterialComponents.Light</item>
    </style>

    <style name="consoleItemsAppearence" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="theme">@style/Platform.MaterialComponents.Light</item>
    </style>

</resources>